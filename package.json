{
  "name": "@tourepedia/www",
  "version": "1.9.0",
  "description": "Tourepedia marking website",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "env-cmd eleventy --serve",
    "build": "eleventy",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tourepedia/www.git"
  },
  "keywords": [
    "tourepedia",
    "marking website",
    "travel in India"
  ],
  "author": "Sudhir Mitharwal<luckysud4@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tourepedia/www/issues"
  },
  "homepage": "https://github.com/tourepedia/www#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@commitlint/cli": "^8.3.3",
    "@commitlint/config-conventional": "^8.3.3",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eleventy-plugin-svg-contents": "^0.5.1",
    "env-cmd": "^10.0.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{tsx|ts|js|jsx|json|html|css|sass|scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} :tada: :rocket:\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false
  }
}
