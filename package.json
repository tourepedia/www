{
  "name": "@tourepedia/www",
  "version": "1.2.0",
  "description": "Tourepedia marking website",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "env-cmd -f .env.development next -p 4000",
    "release": "env-cmd -f .env.tokens semantic-release",
    "postrelease": "npm run deploy:production",
    "commit": "git-cz",
    "build": "next build && next export",
    "serve": "next start",
    "predeploy:testing": "env-cmd -f .env.testing npm run build",
    "deploy:testing": "scp -r out/* tourepedia:~/public_html/test.tourepedia.com/",
    "predeploy:production": "env-cmd -f .env.production npm run build",
    "deploy:production": "scp -r out/* tourepedia:~/public_html/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tourepedia/www.git"
  },
  "keywords": [
    "tourepedia",
    "marking website",
    "travel in India",
    "nextjs"
  ],
  "author": "Sudhir Mitharwal<luckysud4@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tourepedia/www/issues"
  },
  "homepage": "https://github.com/tourepedia/www#readme",
  "dependencies": {
    "@svgr/webpack": "^4.3.1",
    "@types/classnames": "^2.2.9",
    "@types/node": "^12.6.1",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "classnames": "^2.2.6",
    "dotenv": "^8.0.0",
    "next": "^9.0.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "typescript": "^3.5.3",
    "utility-types": "^3.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^7.0.16",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "env-cmd": "^9.0.3",
    "husky": "^3.0.0",
    "lint-staged": "^9.1.0",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.18"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{tsx|ts|js|jsx|json|html|css|sass|scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version} :tada: :rocket:\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ],
    "ci": false
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false
  }
}
